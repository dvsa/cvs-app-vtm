{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "allowJs": true,
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@environment/*": [
        "./environments/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "polyfills.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
