{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "allowJs": true,
    "paths": {
      "@app/*": [ "./app/*" ],
      "@environments/*": [ "./environments/*"],
      "@testconfig/*": ["./testconfig/*"],
    },
    "types": [
      "jest",
      "node",
      "jsdom"
    ]
  },
  "include": [
    "polyfills.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
