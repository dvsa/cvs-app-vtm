{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start server",
      "type": "shell",
      "isBackground": true,
      "command": "npm run start",
      "problemMatcher": [
        {
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "."
            },
            "endsPattern": {
              "regexp": "."
            }
          }
        }
      ]
    },
    {
      "label": "stop server",
      "command": "echo ${input:terminate}",
      "type": "shell"
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
